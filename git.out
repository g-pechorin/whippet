	; cascade the contents of ../pal (behind us)
	cascade '../pal'

;	; prevent any files from being in these folders (the later steps will do some renaming)
;	prevent src/(main|test)/*

	; rename main source files
	rename
		src/main/cgc/(.*.cpp)
		src/$1

	; rename main include files
	rename
		src/main/cgc/(.*.hpp)
		inc/$1

	; rename test sources
	rename
		src/test/cgc/(.*.(c|h)pp)
		test/$1

	exclude 'CMakeLists.txt'
